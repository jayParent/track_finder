<%- include ("partials/header") %>
  <div class="container-fluid h-100">
    <div class="row" id="index_top_page">
      <div class="col">
        <a href="https://github.com/jayParent/track_finder" target="_blank"><i class="fab fa-github mt-3 ml-1"
          aria-hidden="true" id="gh_logo"></i></a>
      </div>
    </div>
    <div class="row h-25 justify-content-center align-items-end text-center mt-5" id="index_header_row">
      <div class="col-lg-6 animated fadeInDown">
        <h1 class="display-5 text-white mt-4">Spotify Track Finder</h1>
        <p class="lead text-white">Analyse your favorite Tracks, get Recommendations based on the Audio Features you choose</p>
        <a href="/login" class="btn btn-secondary">Get Started</a>
      </div>
    </div>
    <div class="row justify-content-center align-items-center h-75">
      <div class="col-lg-6 animated fadeInUp mt-3">
        <div class="container">
          <div class="row">
            <div class="col">
              <img class="img-fluid" src="/imgs/landing_page_demo.png" alt="Image of App Demo">
            </div>
          </div>
          <div class="row text-center text-white mt-5">
            <div class="col">
              <a class="display-4" id="index_more_info_arrow"><i class="fas fa-arrow-down text-secondary animated bounce infinite slower"></i></a>
            </div>
          </div>
        </div>        
      </div>
    </div>
  </div>
  <div class="container-fluid text-white text-center" id="more_info_container">
    <div class="row">
      <div class="col">
        <h1 class="display-5 my-5">How does it work?</h1>
      </div>
    </div>
    <div class="row align-items-center">
      <div class="col-8 col-lg-3 mx-auto">
        <img class="img-fluid" src="/imgs/ud_search.svg" alt="">
        <h4 class="mt-3 mb-5">Browse your favorite tracks.</h4>
      </div>
      <div class="col-8 col-lg-3 mx-auto">
        <img class="img-fluid" src="/imgs/ud_preferences.svg" alt="">
        <h4 class="mt-3 mb-5">Understand and adjust your preferences.</h4>
      </div>
      <div class="col-8 col-lg-3 mx-auto">
        <img class="img-fluid" src="/imgs/ud_music.svg" alt="">
        <h4 class="mt-3 mb-5">Discover new music.</h4>
      </div>
    </div>
    <div class="row justify-content-center my-5">
        <div class="col text-center text-white">
          <a class="display-4" id="index_get_started_arrow"><i class="fas fa-arrow-up text-secondary animated bounce infinite slower"></i></a>
          <p class="lead">Get Started</p>
        </div>
    </div>
    <div class="row">
      <div class="col">
        <%- include ("partials/footer") %>
      </div>
    </div>  
  </div>
  <script src="/../scripts/landing.js"></script>
